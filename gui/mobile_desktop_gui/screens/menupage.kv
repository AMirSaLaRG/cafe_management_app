#:kivy 2.3.1

<MenuPage>:


    MDCard:
        size_hint: None, None
        size: 150, 150
        radius: [75,]
        elevation: 5
        pos_hint: {"center_x": 0.5}
        FitImage:
            source: "assets/cafeavatar.png"

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        MDLabel:
            text: 'Welcome to My Caffe App'
            font_style: 'H5'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            theme_text_color: 'Custom'
            text_color: 0.2, 0.4, 0.6, 0.7

        Button:
            text: 'View Orders'
            size_hint_y: 0.2
            background_color: 0.2, 0.6, 0.8, 0.7
            on_press: app.show_orders()

        Button:
            text: 'Manage Menu'
            size_hint_y: 0.2
            background_color: 0.3, 0.7, 0.5, 0.7
            on_press: app.show_menu()

        Button:
            text: 'Inventory'
            size_hint_y: 0.2
            background_color: 0.8, 0.5, 0.2, 0.7
            on_press: app.show_inventory()

        Button:
            text: 'Reports'
            size_hint_y: 0.2
            background_color: 0.7, 0.2, 0.5, 0.7
            on_press: app.show_reports()

        Button:
            text: 'back'
            size_hint_y: 0.2
            background_color: 0.7, 0.2, 0.5, 0.7
            on_press: app.back()