#:kivy 2.0.0

<MainPage>:
    # Background canvas
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background (adjust if needed)
        Rectangle:
            source: 'assets/bg.jpg'
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Welcome to My Caffe App'
            font_size: 24
            size_hint_y: 0.3
            color: 0.2, 0.4, 0.6, 0.7

        Button:
            text: 'View Orders'
            size_hint_y: 0.2
            background_color: 0.2, 0.6, 0.8, 0.7
            on_press: app.show_orders()

        Button:
            text: 'Manage Menu'
            size_hint_y: 0.2
            background_color: 0.3, 0.7, 0.5, 0.7
            on_press: app.show_menu()

        Button:
            text: 'Inventory'
            size_hint_y: 0.2
            background_color: 0.8, 0.5, 0.2, 0.7
            on_press: app.show_inventory()

        Button:
            text: 'Reports'
            size_hint_y: 0.2
            background_color: 0.7, 0.2, 0.5, 0.7
            on_press: app.show_reports()